class Solution {
    public int pivotInteger(int n) {
        int sum=(n*(n+1))/2;

        for(int i=1;i<=n;i++){
            int sum1=(i*(i+1))/2;
            // System.out.print(sum1+" ");
            // System.out.println(sum-sum1);
            if((sum-sum1+i)==sum1)return i;
        }
        return -1;
        
    }
}
